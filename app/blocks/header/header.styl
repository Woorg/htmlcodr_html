.header
	position fixed
	top 0
	left 0
	right 0
	padding-top 15px
	padding-bottom 15px
	min-height 60px
	// background $header-bg3
	background #fff // ie8
	background rgba(#fff,.9)
	// background $color-bg10 // cool
	// background $color-bg15 // cool
	// background #FFF
	z-index 20
	box-shadow 0 0 3px rgba($color-bg, .2)
	&__in
		position relative
		@extends .in
.logo
	position absolute
	top -14px
	left 0
	float left
	width 138px
	height 60px
	+below(510px)
		left 50%
		margin-left -69px
	&__icon
		position absolute
		top 0
		left 0
		// margin-right 10px
		display inline-block
		vertical-align bottom
		width 100%
		height 100%
		fill $color-bg15
		transition all .3s ease
	&:hover
		.logo__icon
			fill $color-bg10



.main-nav
	margin-top 0
	margin-left 140px
	margin-right 30px
	float right
	font-size 0
	text-align right
	+below(510px)
		margin-top 60px
		margin-left 0
		text-align left
	&__item
		padding-left 30px
		display inline-block
		vertical-align top
		+below(768px)
			width 49.5%
		+below(50%)
			padding-left 0
	a
		border-bottom 1px solid transparent
		padding-top 6px
		padding-bottom 5px
		display block
		font-family $rubik-bold
		// font-size 17px
		font-size 19px
		font-weight 700
		letter-spacing 0.08px
		line-height 14px
		// color #FFF
		color $color-bg
		// color $color-bg10
		white-space nowrap
		text-decoration none
		transition all .1s ease
		+below(768px)
			font-size 16px
		&:hover
			border-bottom 1px solid $color-bg
			// color lighten($color-bg,60)
			color $color-bg10
