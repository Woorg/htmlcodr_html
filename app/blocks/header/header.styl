.header
	padding-top 15px
	padding-bottom 15px
	height 60px
	background $header-bg
	&__in
		@extends .in
.logo
	float left
	font-family $rubik-black
	font-size 30px
	font-weight 700
	letter-spacing 0.14px
	line-height 1
	text-transform uppercase
	color $logo-color
	text-decoration none
	cursor pointer
	transition all .3s ease
	&__icon
		margin-right 10px
		display inline-block
		vertical-align bottom
		width 30px
		height 30px
		fill #fff
	&:hover
		color darken($logo-color,10)

.main-nav
	float right
	&__list
		font-size 0
	&__item
		margin-left 30px
		display inline-block
	&__link
		border-bottom 5px solid transparent
		padding-top 5px
		padding-bottom 5px
		display block
		font-family $museo-sans
		font-size 17px
		font-weight 700
		letter-spacing 0.08px
		line-height 1
		color #FFF
		text-decoration none
		transition all .3s ease
		&:hover
			border-bottom 5px solid #fff
