.content-single
	display block

.social-likes-w
	margin-bottom 20px
	clearfix()

.list
	margin-left ratio-percentage(50,815)
	margin-bottom 27px
	list-style initial
	list-style-type decimal
	li
		margin-bottom 25px
		overflow hidden
		text-overflow ellipsis
	a
		border-bottom 1px solid $color-bg
		font-family $rubik-medium
		font-size 26px
		line-height 42px
		color $color-bg
		text-decoration none
		&:hover
			// border-bottom 1px solid transparent
			color $color-bg10

.blockquote
	border-left 4px solid $color-bg15
	margin-bottom 27px
	padding 25px 25px 25px 30px
	background $bg
	&__text
		position relative
		margin-bottom 16px
		display inline-block
		font-family $rubik-medium
		font-size 26px
		line-height 42px
		&:before
		&:after
			position absolute
			content "\201C"
			font-family $rubik-medium
			font-size 26px
		&:before
			left -14px
		&:after
			margin-left 6px
			content "\201D"
	&__author
		display block
		font-family $rubik-medium
		font-size 16px
		text-align right

	&__vital-w
		display block
		width 100%
		height auto

.code
	margin-bottom 27px

.comments
	&__title
		margin-bottom 21px
		font-family $rubik-medium
		font-size 26px
		color $color-bg

	&__w
		padding 25px
		min-height 300px
		background-color white
	a
		color $color-bg15


