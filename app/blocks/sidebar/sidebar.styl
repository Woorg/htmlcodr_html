.tags
	&__title
		margin-bottom 21px
		font-family $rubik-black
		font-size 26px
		line-height 31px
	.wp-tag-cloud
		font-size 0
		clearfix()

		li
			display inline-block
			vertical-align top
		a
			position relative
			border 1px solid lighten($color-bg, 75)
			border-width 1px 0 1px 1px
			margin-right 15px
			margin-bottom 10px
			padding 5px 12px 5px 8px
			display block
			max-width 140px
			height 28px
			// background $color-bg14
			background lighten($color-bg, 75)
			font-family $rubik-black
			font-size 0
			color $color-bg
			letter-spacing tracking(100)
			text-decoration none
			border-radius 3px 0 0 3px
			span
				max-width 152px
				display inline-block
				font-size 16px
				white-space nowrap
				overflow hidden
				ellipsis()
				text-shadow 0 1px 0px #fff
			&:after
				position absolute
				content ""
				top 50%
				right 0
				margin-top -3px
				width 6px
				height 6px
				background #fff
				border-radius 50%
				z-index 1
			&:before
				position absolute
				content ''
				top -1px
				right -10px
				width 0
				height 0
				z-index 0
				border-style solid
				border-width 14px 0 14px 10px
				border-color transparent transparent transparent lighten($color-bg,75)
			&:hover
				background-color $color-bg
				color #fff
				&:before
					border-color transparent transparent transparent $color-bg
				span
					text-shadow none








