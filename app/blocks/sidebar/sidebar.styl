.sidebar
	float right
	width 347px
	+below(1200px)
		width ratio-percentage(347,1200)
	+below(768px)
		display none
.sidebar-block
	margin-bottom 40px
	padding 25px ratio-percentage(30,347) 25px
	background-color $sidebar-block-bg
	box-shadow 0px 0px 2px 0px rgba( 0, 0, 0, .1)
	&__title
		margin-bottom 30px
		font-weight 400
		font-family $rubik-black
		font-size 18px
		letter-spacing .06px
		line-height 21px
	&__text
		margin-bottom 30px
		font-size 16px
		font-weight 400
		line-height 18px
		// adv block
.vital
	margin-bottom 30px
	padding 0
	// background-color $sidebar-block-bg
	background-color transparent
	text-align center
	&__title
		margin-bottom 5px
		font-family $rubik-bold
		font-size 18px
		font-weight 400
		letter-spacing 0.06px
		line-height 21px
		text-align left
		color $headings-title
		// subscribe block
	&__w
		display block
		width 100%
		height auto

	&_sticky
